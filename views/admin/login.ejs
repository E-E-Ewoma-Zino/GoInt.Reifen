<%- include("components/_head") %>
	<%# include("utils/breadcrumb") %>



		<!--================login_part Area =================-->
		<section class="login_part padding_top">
			<div class="container">

				<div class="col-lg-6 col-md-6">
					<div class="login_part_form">
						<div class="login_part_form_iner">
							<h3>Welcome Admin! <br>
								Please Sign in now
							</h3>
							<form class="row contact_form" action="/admin/login" method="POST">
								<div class="col-md-12 form-group p_star">
									<% if(userEmail){ %>
										<input type="email" class="form-control" id="email" name="username"
											placeholder="Email" value="<%= userEmail %>" required>
										<% }else{ %>
											<input type="email" class="form-control" id="email" name="username"
												placeholder="Email" required>
											<% } %>
								</div>
								<div class="col-md-12 form-group p_star">
									<!-- hidden -->
									<input type="hidden" name="authLevel" value="1">
									<input type="password" class="form-control" id="password" name="password"
										placeholder="Password" required>
								</div>
								<div class="col-md-12 form-group">
									<!-- <div class="creat_account d-flex align-items-center">
													<input type="checkbox" id="f-option" name="selector">
													<label for="f-option">Remember me</label>
												</div> -->
									<input type="hidden" name="cartData" id="cartData" value="">
									<button type="submit" id="sync" value="submit" class="btn_3">
										log in
									</button>
									<a class="lost_pass" href="#">forget password?</a>
								</div>
							</form>
						</div>
					</div>
					<h4>Not an admin? <a class="btn_4" href="/">Take me back</a></h4>
				</div>
			</div>
		</section>
		</div>
		<!--================login_part end =================-->






