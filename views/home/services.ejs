<%- include("components/_head") %>
	<%- include("components/_navbar") %>

		<!-- Header -->
		<header class="ex-header bg-gray">
			<div class="container">
				<div class="row">
					<div class="col-xl-10 offset-xl-1">
						<h1>
							<%= page.title %> 
						</h1>
					</div> <!-- end of col -->
				</div> <!-- end of row -->
			</div> <!-- end of container -->
		</header> <!-- end of ex-header -->
		<!-- end of header -->

		<!-- Basic -->
		<div class="ex-basic-1 pt-5 pb-5 form-1">
		<img class="decoration-star" style="left: -226px;width: 400px;top: 0px;" src="/home/images/decoration-star.svg" alt="alternative">
		<img class="decoration-star-2" style="right: -226px;width: 400px;top: 0px;" src="/home/images/decoration-star.svg" alt="alternative">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-lg-6 d-flex justify-content-center align-items-center">
						<img class="img-fluid rounded-3 mt-5 mb-3" src="/home/images/vector/service.png" alt="alternative">
					</div> <!-- end of col -->
				</div> <!-- end of row -->
			</div> <!-- end of container -->
		</div> <!-- end of ex-basic-1 -->
		<!-- end of basic -->

		<!-- Basic -->
		<div class="ex-basic-1 pt-4">
			<div class="container">
				<div class="row">
					<div class="col-xl-10 offset-xl-1">
						<p><%= page.services[0] %></p>
						<p class="mb-5"><%= page.services[1] %></p>

						<h2 class="mb-3">
							<%= page.whyUs.title %>
						</h2>
						<p>
							<%= page.whyUs.body[0] %>
						</p>
						<p class="mb-4">
							<%= page.whyUs.body[1] %>
						</p>
					</div> <!-- end of col -->
				</div> <!-- end of row -->
				<div class="text-box mb-5">
					<h3>
						<%= page.fact.title %>
					</h3>
					<p>
						<%= page.fact.text %>
					</p>
				</div> <!-- end of text-box -->
			</div> <!-- end of container -->
		</div> <!-- end of ex-basic-1 -->
		<!-- end of basic -->

		<!-- Cards -->
		<div class="ex-cards-1 pt-3 pb-3">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<h2 class="mb-3">
							Services We Offer
						</h2>
					</div>
					<div class="col-lg-12">
						<!-- Card -->
						<div class="card hover" onclick="link({ url: 'services/<%= page.img[0] %>', name: '<%= page.img[0] %>', target: '' })">
							<ul class="list-unstyled">
								<li class="d-flex">
									
									<div class="flex-grow-1">
										<img class="img-fluid details-img rounded-3" style="border: none" src="/home/images/vector/import.png" alt="<%= page.img[0] %>">
										<h5><%= page.img[0] %></h5>
										<p><%= page.body[0] %></p>
									</div>
								</li>
							</ul>
						</div> <!-- end of card -->
						<!-- end of card -->

						<!-- Card -->
						<div class="card hover" onclick="link({ url: 'services/<%= page.img[1] %>', name: '<%= page.img[1] %>', target: '' })">
							<ul class="list-unstyled">
								<li class="d-flex">
									
									<div class="flex-grow-1">
										<img class="img-fluid details-img rounded-3" style="border: none" src="/home/images/vector/export.png" alt="<%= page.img[1] %>">
										<h5><%= page.img[1] %></h5>
										<p><%= page.body[1] %></p>
									</div>
								</li>
							</ul>
						</div> <!-- end of card -->
						<!-- end of card -->

						<!-- Card -->
						<div class="card hover" onclick="link({ url: 'services/<%= page.img[2] %>', name: '<%= page.img[2] %>', target: '' })">
							<ul class="list-unstyled">
								<li class="d-flex">
									
									<div class="flex-grow-1">
										<img class="img-fluid details-img rounded-3" style="border: none" src="/home/images/vector/recycle.png" alt="<%= page.img[2] %>">
										<h5><%= page.img[2] %></h5>
										<p><%= page.body[2] %></p>
									</div>
								</li>
							</ul>
						</div> <!-- end of card -->
						<!-- end of card -->

					</div> <!-- end of col -->
				</div> <!-- end of row -->
			</div> <!-- end of container -->
		</div> <!-- end of ex-cards-1 -->
		<!-- end of cards -->

		<%- include("components/_footer") %>
			<%- include("components/_scripts") %>
				</body>

				</html>