	<!-- Contact -->
	<div id="contact" class="form-1">
		<img class="decoration-star" src="/home/images/decoration-star.svg" alt="alternative">
		<img class="decoration-star-2" src="/home/images/decoration-star.svg" alt="alternative">
		<div class="container">
			<div class="row">
				<div class="col-md-6 d-flex justify-content-center align-items-center">
					<div class="image-container">
						<img class="img-fluid" src="/home/images/vector/contact.png" alt="alternative">
					</div> <!-- end of image-container -->
				</div> <!-- end of col -->
				<div class="col-md-6">
					<div class="text-container">
						<h2>Contact us for a your tires today</h2>

						<!-- Contact Form -->
						<form id="contactForm" action="/api/contact" method="POST">
							<div class="form-group">
								<input type="text" class="form-control-input" name="name" placeholder="Name" required>
							</div>
							<div class="form-group">
								<input type="email" class="form-control-input" name="email" placeholder="Email" required>
							</div>
							<div class="form-group">
								<textarea class="form-control-textarea" name="request" placeholder="Your Request" required></textarea>
							</div>
							<div class="form-group d-flex justify-content-between">
								<button type="submit" class="btn-solid-reg float-start">Submit</button>
								<a href="tel:<%= footer.contact.phone[0] %>" class="btn-outline-reg float-start">Talk to us now</a>
							</div>
						</form>
						<!-- end of contact form -->
					</div> <!-- end of text-container -->
				</div> <!-- end of col -->
			</div> <!-- end of row -->
		</div> <!-- end of container -->
	</div> <!-- end of form-1 -->
	<!-- end of contact -->
