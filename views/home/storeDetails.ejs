<%- include("components/_head") %>
<%- include("components/_navbar") %>

<!-- Header -->
<header class="ex-header bg-gray">
	<div class="container">
		<div class="row">
			<div class="col-xl-10 offset-xl-1">
				<h1>
					<%= page.header %>
				</h1>
			</div> <!-- end of col -->
		</div> <!-- end of row -->
	</div> <!-- end of container -->
</header> <!-- end of ex-header -->
<!-- end of header -->

<!-- Projects -->
<div id="projects" class="cards-2 ex-basic-1 pt-5 pb-5 form-1 position-relative">
	<img class="decoration-star position-absolute" style="left: -226px;width: 400px;top: 0px;" src="/home/images/decoration-star.svg"
		alt="alternative">
	<img class="decoration-star-2 position-absolute" style="right: -226px;width: 400px;top: 0px;" src="/home/images/decoration-star.svg"
		alt="alternative">
	<div class="container">
		<div class="row">
			<div class="col-md-6 grid-md-2x d-lg-block">
				<!-- Card -->
				<div class="card">
					<div class="card-img-holder position-relative">
						<a href="/store" target="_blank" style="opacity: 0;transition: opacity .2s ease-out" class="btn btn-outline-light absolute-center on-line">View</a>
						<img class="img-fluid w-100 mb-0" src="/home/images/products/tireImg1.jpg" alt="alternative">
					</div>
				</div>
				<!-- end of card -->
			</div> <!-- end of col -->
			<div class="col-md-6 grid-md-2x d-lg-block">
				<div class="text-container">
					<h2>Contact us for a your tires today</h2>

					<!-- Contact Form -->
					<form action="/api/contact" method="POST">
						<div class="form-group">
							<input type="text" class="form-control-input" name="name" placeholder="Name" required>
						</div>
						<div class="form-group">
							<input type="email" class="form-control-input" name="email" placeholder="Email" required>
						</div>
						<div class="form-group">
							<textarea class="form-control-textarea" name="request" placeholder="Your Request" required></textarea>
						</div>
						<div class="form-group d-flex justify-content-between">
							<button type="submit" class="btn-solid-reg float-start">Submit</button>
							<a href="tel:<%= footer.contact.phone[0] %>" class="btn-outline-reg float-start">Talk to us now</a>
						</div>
					</form>
					<!-- end of contact form -->
				</div> <!-- end of text-container -->
			</div> <!-- end of col -->
		</div> <!-- end of row -->
	</div> <!-- end of container -->
</div> <!-- end of cards-2 -->
<!-- end of projects -->

<%- include("components/_footer") %>
<%- include("components/_scripts") %>
</body>

</html>